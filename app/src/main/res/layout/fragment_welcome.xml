<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.FragmentWelcome">

    <TextView
        android:id="@+id/napis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="NBAScore"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/goToClubs"
        />

    <Button
        android:id="@+id/goToPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYERS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/goToClubs"
        app:layout_constraintTop_toBottomOf="@id/napis"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/goToClubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLUBS"
        app:layout_constraintLeft_toRightOf="@id/goToPlayers"
        app:layout_constraintRight_toLeftOf="@id/goToGames"
        app:layout_constraintTop_toBottomOf="@id/napis"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/goToGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Games"
        app:layout_constraintLeft_toRightOf="@id/goToClubs"
        app:layout_constraintTop_toBottomOf="@id/napis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>