<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.FragmentTeams">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A1A1A1">

        <Button
            android:id="@+id/conferencesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conferences"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39" />

        <Button
            android:id="@+id/divisionsButton"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Divisions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/conferencesButton"
            android:backgroundTint="@color/red"/>

        <Button
            android:id="@+id/allTeamsButton"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="All teams"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divisionsButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>